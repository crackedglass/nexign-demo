<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:pro="http://www.liquibase.org/xml/ns/pro"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
                        http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">

    <changeSet id="001_createTableCDR" author="crackedglass">
        <createTable tableName="cdr">
            <column name="cdr_id" type="UUID">
                <constraints primaryKey="true" />
            </column>

            <column name="call_type" type="ENUM('INCOMMING', 'OUTCOMMING')">
                <constraints nullable="false" />
            </column>

            <column name="caller_number" type="VARCHAR_IGNORECASE">
                <constraints nullable="false" />
            </column>

            <column name="receiver_number" type="VARCHAR_IGNORECASE">
                <constraints nullable="false" />
            </column>

            <column name="start_timestamp" type="TIMESTAMP">
                <constraints nullable="false" />
            </column>

            <column name="end_timestamp" type="TIMESTAMP">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>